brooklyn.catalog:
  version: "2.0.0-SNAPSHOT"
  iconUrl: https://raw.githubusercontent.com/docker-library/docs/471fa6e4cb58062ccbf91afc111980f9c7004981/swarm/logo.png
  dependsOn:
    - docker.tests.bom
    - swarm.tests.bom
    - jclouds.tests.bom
  license_code: CLOUDSOFT-1.0

  items:
    - id: docker-and-swarm-engine-tests
      name: Docker Engine and Swarm Tests
      description: Tests on Docker Engine with and without TLS, and on Swarm (with TLS)
      itemType: template
      item:
        brooklyn.config:
          timeout: 1h
          timeout.initialStartup: 1h
          timeout.runtimeAssertion: 1h

        services:
          - type: docker-engine-tests
          - type: docker-engine-tls-tests
          - type: docker-swarm-tests
          - type: docker-preinstall-tests
          - type: docker-vm-container-tests

